<div class="w3-container w3-margin">
    <div class="w3-container w3-row">
        <form id="reset-password">
            <div class="w3-container">
                <h3 class="text-center">Enter account's email</h3>

                <div class="w3-row w3-margin">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">
                            <i class="bi bi-envelope"></i>
                        </span>

                        <input type="email" name="email" id="email" class="form-control" placeholder="Type email here"
                            required />
                    </div>

                    <div id="divemailerror" class="input-group mt-4 d-none">
                        <span class="input-group-text">
                            <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                        </span>
                        <input type="text" id="emailerror" class="form-control" readonly>
                    </div>
                </div>

                <div class="w3-row w3-margin">
                    <div class="w3-container w3-cell">
                        <input id="reset-submit-button" type="submit" class="btn btn-success" type="button"
                            style="border-radius: 15px;">
                    </div>

                    <div class="w3-container w3-cell">
                        <a href="/" type="button" class="btn btn-danger" type="button"
                            style="border-radius: 15px;">Cancel
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>