<div class="row" style="margin:5% auto 5% auto;">
    <form id="reset-password" style="margin:6rem 0;">
        <div class="container">
            <h3 class="text-center">Enter account's email</h3>

            <div class="col-12">
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">
                        <i class="bi bi-envelope"></i>
                    </span>

                    <input type="email" name="email" id="email" class="form-control" placeholder="Type email here"
                        required />
                </div>

                <div id="divemailerror" class="input-group mt-4 d-none">
                    <span class="input-group-text">
                        <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                    </span>
                    <input type="text" id="emailerror" class="form-control" readonly>
                </div>
            </div>

            <div class="col-12 my-4">
                <div class="row">
                    <div class="col-6">
                        <input id="reset-submit-button" type="submit" class="btn btn-success" type="button"
                            style="border-radius: 15px;">
                    </div>

                    <div class="col-6">
                        <a href="/" type="button" class="btn btn-primary" type="button"
                            style="border-radius: 15px;">Cancel
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>