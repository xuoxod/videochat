<div class="row" style="margin:5% auto 5% auto;">
    <form id="reset-password" style="margin:6rem 0;">
        <div class="container">
            <h3 class="text-center">Create new password</h3>

            <div class="col-12">
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <span class="bi bi-envelope"></span>
                    </span>

                    <input type="email" name="email" id="email-input" class="form-control input" value="{{email}}"
                        readonly />
                </div>

                <div class="input-group mb-2">
                    <span class="input-group-text">
                        <span id="show-pwds" class="bi bi-eye-fill"></span>
                    </span>

                    <input type="password" name="pwd1" id="pwd1" class="form-control input"
                        placeholder="Create password" required />
                </div>


                <div class="input-group mt-3">
                    <span class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                    </span>

                    <input type="password" name="pwd2" id="pwd2" class="form-control input"
                        placeholder="Confirm password" required />
                </div>

                <div id="divpassworderror" class="input-group mt-4 d-none">
                    <span class="input-group-text">
                        <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                    </span>
                    <input type="text" id="emailerror" class="form-control" readonly>
                </div>
            </div>

            <div class="col-12 my-4">
                <div class="row">
                    <div class="col-6">
                        <input id="reset-submit-button" type="submit" class="btn btn-success" type="button"
                            style="border-radius: 15px;">
                    </div>

                    <div class="col-6">
                        <a href="/" type="button" class="btn btn-primary" type="button"
                            style="border-radius: 15px;">Cancel
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>