<div class="row">
    <form action="/user/profile/update" method="post" style="margin:1rem 0 5rem 0;">
        <div class="container">
            <div class="row">
                <div class="col-12 mb-3">
                    <strong>Name</strong>
                    <div class="input-group">
                        <input type="text" name="fname" value="{{profile.user.fname}}" class="form-control"
                            placeholder="First Name" />
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <div class="input-group">
                        <input type="text" name="lname" value="{{profile.user.lname}}" class="form-control"
                            placeholder="Last Name" />
                    </div>
                </div>

                <div class="col-12 mt-4">
                    <strong>Email</strong>
                    <div class="input-group">
                        <input type="email" name="email" value="{{profile.user.email}}" class="form-control"
                            placeholder="Email" />
                    </div>
                </div>


                <div class="col-12 mt-4">
                    <strong>Street Address</strong>

                    <div class="input-group mb-3">
                        <input type="text" name="street" {{#if
                            profile.address.street}}value="{{profile.address.street}}" {{/if}} class=" form-control"
                            placeholder="Street address" />
                    </div>

                    <div class="input-group mb-3">
                        <input type="text" name="city" {{#if profile.address.city}}value="{{profile.address.city}}"
                            {{/if}}class="form-control" placeholder="City" />
                    </div>

                    <div class="input-group">
                        <input type="text" name="zipcode" {{#if
                            profile.address.zipcode}}value="{{profile.address.zipcode}}" {{/if}} class="form-control"
                            placeholder="Zipcode" />
                    </div>
                </div>

                <div class="col-12 mt-4">
                    <strong>Save Password</strong>
                    <div class="input-group">
                        <input class="form-check-input" type="checkbox" {{#if profile.passwordSaved}}checked{{/if}}
                            name="savepwd" />
                    </div>
                </div>

                <div class="col-12 mt-4">
                    <strong>Gender</strong>
                    <div class="input-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" {{#if gender.male}}checked{{/if}}
                                name="male">&nbsp;
                            <label class="form-check-label" for="flexCheckDefault">
                                Male
                            </label>
                        </div>&nbsp;&nbsp;&nbsp;

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" {{#if gender.female}}check{{/if}}
                                name="female">&nbsp;
                            <label class="form-check-label" for="flexCheckChecked">
                                Female
                            </label>
                        </div>
                    </div>
                </div>

                <div class="col-12 my-4">
                    <strong>Birthday</strong>
                    <div class="input-group">
                        <input type="date" name="dob"
                            value="{{profile.dob.year}}-{{profile.dob.month}}-{{profile.dob.day}}"
                            class="form-control" />
                    </div>
                </div>
            </div>


            <input id="reg-submit-button" type="submit" class="btn btn-primary" type="button"
                style="border-radius: 15px;">
        </div>
    </form>
</div>